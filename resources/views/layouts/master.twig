<body class="flex flex-col">
        <nav class="my-2 h-16 flex items-center justify-center mb-8">
            <div class="flex-1 ml-8 animated slideInLeft">
                <p class="text-2xl text-red-dark uppercase">curriculum vitae</p>
            </div>

            <div class="mr-8 animated slideInRight">
                <p class="text-grey ">Coen Nijenhuis</p>
            </div>
        </nav>

    <div class="flex-1">
        {% block content %}{% endblock %}
    </div>


    <script src="/js/app.js"></script>
    <script>

        /**
         * Redirects the user the
         *
         * @param url
         */
        function redirect(url) {
            window.location.href = url;
        }

        /**
         * Submits the logout form
         */
        function submitLogoutForm()
        {
            document.getElementById('logout-form').submit();
        }

        function fadeElement(element){
            (element.opacity-=.1) < 0 ? element.display= "none" :setTimeout(fadeElement,40);
        }

    </script>

    {% block javascript %}{% endblock %}

</body>